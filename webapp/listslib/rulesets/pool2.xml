<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<ruleset>
    <meta>
        <name is="2er-Pool" />
        <require>
            <exact of="2" />
        </require>
    </meta>

    <rules>
        <alloc>
            <fighter id="1" />
            <fighter id="2" />
        </alloc>

        <match id="AvB">
            <white><fighter id="1" /></white>
            <blue><fighter id="2" /></blue>
        </match>

        <order>
            <match id="AvB" />
        </order>

        <score>
            <first><winner match-id="AvB" /></first>
            <second><loser match-id="AvB" /></second>
        </score>
    </rules>

    <display>
        <template page="3">
            <write-header x="137.5" y="16.75" />
            <write-fighter x="22" y="48" type="full">
                <fighter id="1" />
            </write-fighter>
            <write-fighter x="22" y="54" type="full">
                <fighter id="2" />
            </write-fighter>
            <write-score x="60.125" y="48" match-id="AvB" for="white" />
            <write-score x="60.125" y="54" match-id="AvB" for="blue" />
        </template>
    </display>
</ruleset>